<Window x:Class="Todo_MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="328">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView
            Grid.Row="0"
            DisplayMemberPath="IsCompleted"
            Margin="10,10,10,10"
            ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn
                            Header="State">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ToggleButton 
                                Width="10"
                                Height="10"
                                IsChecked="{Binding IsCompleted, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Name}"
                            Header="Name"/>
                        <GridViewColumn
                             DisplayMemberBinding="{Binding Category}"
                            Header="Category"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel
            Grid.Row="1"
            Margin="10, 0, 10, 10"
            Orientation="Horizontal">
            <TextBox 
                Text="{Binding AddingItem.Name, UpdateSourceTrigger=PropertyChanged}"
                Width="50"
                Margin="5" />
            <TextBox 
                Text="{Binding AddingItem.Category, UpdateSourceTrigger=PropertyChanged}"
                Width="50"
                Margin="5" />
            <Button
                Command="{Binding AddButtonICommand}"
                Width="25" 
                Margin="5" 
                Content="Add" 
                FontSize="10"/>
        </StackPanel>

    </Grid>
</Window>
